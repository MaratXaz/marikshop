    <div class="cart">
        <h2>Корзина</h2>
<p>Товары в корзине: <span id="cart-count">0</span></p>
        <p>Итого: <span id="total-price">0</span> ₽</p>
        <button id="checkout">Оформить заказ</button>
    </div>

    <script>
        let cart = [];    
        const addToCartButtons = document.querySelectorAll('.add-to-cart');
        addToCartButtons.forEach(button => {
            button.addEventListener('click', function() {
                const product = this.parentElement;
                const price = parseInt(product.querySelector('.price').textContent.replace(' ₽', ''));
                cart.push(price);
                updateCart();
            });
        });
        function updateCart() {
            const cartCount = document.getElementById('cart-count');
            const totalPrice = document.getElementById('total-price');

            cartCount.textContent = cart.length;
            totalPrice.textContent = cart.reduce((total, price) => total + price, 0);
        }
        document.getElementById('checkout').addEventListener('click', function() {
            if (cart.length > 0) {
                alert('Ваш заказ оформлен! Общая сумма: ' + cart.reduce((total, price) => total + price, 0) + ' ₽');
            } else {
                alert('Корзина пуста!');
            }
        });
    </script>

